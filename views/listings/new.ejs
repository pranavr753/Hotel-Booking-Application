<%- layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
    <div class="col-8 offset-2">
    <h3>Create A New Listing</h3>
    <form class="needs-validation" action="/listings" method="POST" novalidate enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" class="form-control" type="text" placeholder="Catchy Title!" name="listing[title]" required />
            <div class="invalid-feedback">Enter a valid title</div>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" class="form-control" name="listing[description]" required></textarea>
            <div class="invalid-feedback">Enter a valid description</div>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <!-- <div class="form-group mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input id="image" class="form-control" type="text" placeholder="Enter URL/Image" name="listing[image]" />
        </div> -->
        <div class="form-group mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input id="image" class="form-control" type="file" name="listing[image]" required />
        </div>
        <div class="row">
        <div class="form-group mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input id="price" class="form-control" placeholder="1200" name="listing[price]" required />
            <div class="invalid-feedback">Enter a valid price</div>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input id="country" class="form-control" type="text" placeholder="India" name="listing[country]" required />
            <div class="invalid-feedback">Enter a valid country</div>
            <div class="valid-feedback">Looks good!</div>
        </div>
        </div>
        <div class="form-group mb-3">
            <label for="location" class="form-label">Location</label>
            <input id="location" class="form-control" type="text" placeholder="Jaipur, Rajasthan" name="listing[location]" required />
            <div class="invalid-feedback">Enter a valid location</div>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
</div>
</div>
</body>